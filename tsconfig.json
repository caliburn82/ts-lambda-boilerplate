{
  // Visit https://aka.ms/tsconfig to read more about this file

  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "module": "node16",
    "rootDir": "src",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
